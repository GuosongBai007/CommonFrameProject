<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:clipToPadding="true">

    <com.base.widget.VelocityViewPager
        android:id="@+id/ad_image_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.base.widget.banner.BannerIndicatorView
        android:id="@+id/ad_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        app:indicatorInterval="8dp"
        app:normalDrawable="@drawable/ad_indicate_nomal"
        app:selectDrawable="@drawable/ad_indicate_selected" />


</RelativeLayout>