        <attr name="DCBTabSelectedTextColor" format="color" />
        <attr name="DCBTabMinWidth" format="dimension" />
        <attr name="DCBTabMaxWidth" format="dimension" />
        <attr name="DCBTabBackgroundColor" format="reference|color" />
