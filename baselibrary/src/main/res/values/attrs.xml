<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DCBTabLayout">
        <attr name="DCBTabIndicatorHeight" format="dimension" />
        <attr name="DCBTabIndicatorWidth" format="dimension" />
        <attr name="DCBTabIndicatorColor" format="color" />
        <attr name="DCBTabPadding" format="dimension" />
