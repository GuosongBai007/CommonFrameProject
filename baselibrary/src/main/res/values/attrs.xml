        <attr name="DCBTabSelectedBackgroundDrawable" format="reference"/>

        <attr name="DCBTabContentStart" format="dimension" />
        <attr name="DCBTabMode">
            <enum name="scrollable" value="0x00000000" />
            <enum name="fixed" value="0x00000001" />
        </attr>
        <attr name="DCBTabGravity" format="integer" />
        <attr name="DCBTabTextSize" format="dimension" />
        <attr name="DCBTabTextBold" format="boolean" />
