        <attr name="DCBTabDividerWidthWidthText" format="boolean" />
        <attr name="DCBTabDividerColor" format="color" />
        <attr name="DCBTabDividerGravity">
            <enum name="top" value="0x00000000" />
            <enum name="center" value="0x00000001" />
            <enum name="bottom" value="0x00000002" />
        </attr>
    </declare-styleable>

